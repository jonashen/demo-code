- title I18n.t("forgot_password", scope: "devise.titles", default: 'Forgot Password')

.row
  .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), validate: true, wrapper: :bootstrap3_horizontal, html: { method: :post, class: '' } ) do |f|
      %h2
        =h I18n.t("forgot_password", scope: "devise.titles")
      %hr.colorgraph/
      .row
        .col-xs-12.col-sm-12.col-md-12
          = f.input :email, label: false, required: true, input_html: { class: 'input-lg'}
      %hr.colorgraph/
      .row
        .col-xs-12.col-md-12
          = f.button :submit, t("devise.password.submit", default: 'Send me reset password instructions'), class: 'btn btn-lg btn-primary btn-block'
      %hr.colorgraph/
      = render "devise/shared/links"



