.row
  .col-xs-12
    .search
      = form_tag others_search_path, method: :get, class: 'form-inline'
      #form-group.form-inline
        = hidden_field_tag :category_id, params[:category_id]
        - if @category and @category.name.downcase.singularize != Other.to_s.downcase
          = autocomplete_field_tag 'search_other', '', others_search_path(category_id: params[:category_id]), size: 50, class: 'form-control',   placeholder: "#{@category.name}:  search name", id: 'search_other', value: params[:search_other], update_elements: {  category_id: params[:category_id]}
        - else
          = autocomplete_field_tag 'search_other', '', others_search_path(category_id: params[:category_id]), size: 50, class: 'form-control', placeholder: "#{Other.to_s}:  search name", id: 'search_other', value: params[:search_other], update_elements: {category_id: params[:category_id]}
        %button{type: 'submit', class: 'btn btn-default'}
          Search Others

%hr


:javascript

  (function(){

    $(document).ready(function(){
      $("#search_other").autocomplete({ html: true });
    });

  })();


